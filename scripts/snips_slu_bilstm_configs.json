{
  "type": "slu",
  "gpu_device": 0,
  "tokenizer": "space_tokenizer",
  "dataset": {
    "name": "snips",
    "train": {
      "vocab_min_freq": 5,
      "input": "./corpus/snips/train/seq.in",
      "slots": "./corpus/snips/train/seq.out",
      "intents": "./corpus/snips/train/label"
    },
    "test": {
      "input": "./corpus/snips/test/seq.in",
      "slots": "./corpus/snips/test/seq.out",
      "intents": "./corpus/snips/test/label"
    }
  },
  "deploy": {
    "path": "./tmp/slu_initial_test"
  },
  "model": {
    "type": "bilstm_crf",
    "parameters": {
      "word_embedding_dims": 64,
      "hidden_dims": 128,
      "lstm_num_layers": 1,
      "lstm_dropout": 0.5
    }
  },
  "train": {
    "epochs": 25,
    "eval_steps": 600,
    "batch_size": 16,
    "sequence_length": 40
  }
}