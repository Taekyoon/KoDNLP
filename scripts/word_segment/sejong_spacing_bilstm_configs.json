{
  "type": "word_segment",
  "gpu_device": 0,
  "dataset": {
    "name": "sejong_spacing",
    "train": {
      "vocab_min_freq": 10,
      "input": "./corpus/sejong_raw/train.txt"
    },
    "test": {
      "limit_len": 150,
      "input": "./corpus/sejong_raw/test.txt"
    }
  },
  "deploy": {
    "path": "./tmp/sejong_spacing_epoch_50,batch_128_len_100"
  },
  "model": {
    "type": "bilstm_crf",
    "parameters": {
      "word_embedding_dims": 32,
      "hidden_dims": 64
    }
  },
  "train": {
    "epochs": 10,
    "eval_steps": -1,
    "eval_batch_size": 512,
    "batch_size": 128,
    "sequence_length": 100
  }
}
